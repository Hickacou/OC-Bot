{
	"name": "oc-bot",
	"version": "1.3.0",
	"description": "Once Community's Discord Bot",
	"main": "build/app.js",
	"scripts": {
		"compile": "run-script-os",
		"compile:windows": "rmdir /S /Q build & tsc",
		"compile:nix": "rm -rf build && tsc",
		"start": "npm run compile && pm2 start build/app.js --name 'OC-Bot'",
		"update": "git pull && npm run compile && npm update && pm2 restart 'OC-Bot'",
		"restart": "pm2 restart 'OC-Bot'",
		"stop": "pm2 stop 'OC-Bot'"
	},
	"author": "Hicka",
	"license": "MIT",
	"dependencies": {
		"@types/gm": "^1.18.9",
		"@types/node-cron": "^2.0.3",
		"@types/node-fetch": "^2.5.7",
		"@types/validator": "^13.1.0",
		"@types/ws": "^7.2.6",
		"canvas": "^2.6.1",
		"chalk": "^4.1.0",
		"discord.js": "^12.3.1",
		"dotenv": "^8.2.0",
		"gifencoder": "^2.0.1",
		"html-entities": "^1.3.1",
		"node-cron": "^2.0.3",
		"node-fetch": "^2.6.1",
		"pm2": "^4.4.1",
		"run-script-os": "^1.1.1",
		"sequelize": "^6.3.5",
		"sqlite3": "^4.2.0",
		"strip-ansi": "^6.0.0",
		"typescript": "^3.9.7"
	},
	"devDependencies": {
		"@types/node": "^14.10.1",
		"ts-node": "^8.10.2"
	}
}
